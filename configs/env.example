# Alignzo Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=development
PORT=3001
API_VERSION=v1
APP_NAME=Alignzo
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL Database Connection
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_TIMEOUT=3600

# ================================
# FIREBASE AUTHENTICATION
# ================================
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK
FIREBASE_ADMIN_SDK_PATH=./configs/firebase/your-firebase-adminsdk.json
GOOGLE_APPLICATION_CREDENTIALS=./configs/firebase/your-firebase-adminsdk.json

# ================================
# JWT CONFIGURATION
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# SECURITY CONFIGURATION
# ================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://10.0.15.110:3000
CORS_CREDENTIALS=true

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ================================
# EMAIL CONFIGURATION
# ================================
# SendGrid or SMTP Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@alignzo.com

# ================================
# FILE STORAGE CONFIGURATION
# ================================
# AWS S3 or MinIO Configuration
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=alignzo-dev-bucket

# Local Storage (for development)
LOCAL_STORAGE_PATH=./uploads

# ================================
# QUEUE CONFIGURATION
# ================================
# BullMQ Redis Queue
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_PREFIX=alignzo

# ================================
# EXTERNAL INTEGRATIONS
# ================================
# JIRA Configuration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your_jira_email@company.com
JIRA_API_TOKEN=your_jira_api_token

# Remedy Configuration
REMEDY_BASE_URL=https://your-remedy-server.com
REMEDY_USERNAME=your_remedy_username
REMEDY_PASSWORD=your_remedy_password

# Nagios Configuration
NAGIOS_BASE_URL=https://your-nagios-server.com
NAGIOS_USERNAME=your_nagios_username
NAGIOS_PASSWORD=your_nagios_password

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# ================================
# AI/ML CONFIGURATION
# ================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=alignzo-embeddings

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key

# ================================
# MONITORING & LOGGING
# ================================
# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# DataDog or New Relic
DATADOG_API_KEY=your_datadog_api_key
NEWRELIC_LICENSE_KEY=your_newrelic_license_key

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# ================================
# DEVELOPMENT TOOLS
# ================================
# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs

# Database Seeding
SEED_DATABASE=false
SEED_ADMIN_EMAIL=admin@alignzo.com
SEED_ADMIN_PASSWORD=Admin123!

# Testing Configuration
TEST_DATABASE_URL="postgresql://alignzo:alignzo@localhost:5432/alignzo_test?schema=public"

# ================================
# FEATURE FLAGS
# ================================
FEATURE_AI_CHAT=false
FEATURE_INTEGRATIONS=true
FEATURE_ANALYTICS=true
FEATURE_SOCIAL=false
FEATURE_MOBILE_API=true